{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "attacks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "power"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "type": {"type": "string"},
          "power": {"type": "number"},
          "cost": {"type": "number"},
          "target": {"type": "string"},
          "hits": {"type": "integer"},
          "element": {"type": "string"},
          "effect": {"type": "object"},
          "description": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}