{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "enemies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "classification", "hp_base"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "classification": {"type": "string"},
          "min_wave": {"type": "integer"},
          "spawn_on_wave_multiple_of": {"type": "integer"},
          "hp_base": {"type": "number"},
          "atk_base": {"type": "number"},
          "def_base": {"type": "number"},
          "xp_base": {"type": "number"},
          "gold_base": {"type": "number"},
          "drops": {"type": "array", "items": {"type": "object"}},
          "attacks": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    },
    "scaling_notes": {"type": "object"}
  },
  "additionalProperties": false
}